---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact - UIUXTINA Design">
	<Header />
	<main>
		<section class="contact-page">
			<div class="container">
				<div class="content">
					<h1 class="fade-in">Get in Touch</h1>
					<p class="intro fade-in fade-in-delay-1">
						I'm available for new opportunities and collaborations.
					</p>

					<form
						class="contact-form fade-in fade-in-delay-2"
						action="https://formspree.io/f/mvzqjedv"
						method="POST"
					>
						<div class="form-group">
							<label for="name">Name</label>
							<input
								type="text"
								id="name"
								name="name"
								required
								placeholder="Your name"
							/>
						</div>

						<div class="form-group">
							<label for="email">Email</label>
							<input
								type="email"
								id="email"
								name="email"
								required
								placeholder="your.email@example.com"
							/>
						</div>

						<div class="form-group">
							<label for="message">Message</label>
							<textarea
								id="message"
								name="message"
								required
								rows="6"
								placeholder="Tell me about your project or inquiry"
							></textarea>
						</div>

						<button type="submit" class="submit-btn">Send Message</button>
					</form>

					<div class="contact-info fade-in fade-in-delay-3">
						<p class="email-direct">Or email me directly at <a href="mailto:uiuxtina@gmail.com">uiuxtina@gmail.com</a></p>
						<p class="location">Based in Kansas City, Missouri, United States</p>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.contact-page {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 200px 5vw 100px;
		background: var(--color-bg);
	}

	.contact-page .container {
		max-width: none !important;
		width: 100% !important;
		padding: 0 5vw !important;
	}

	.contact-page h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		margin-bottom: var(--spacing-md);
		text-align: center;
		letter-spacing: 0.05em;
	}

	.intro {
		font-size: 1.125rem;
		line-height: 1.8;
		text-align: center;
		color: var(--color-text-muted);
		max-width: 900px;
		margin: 0 auto var(--spacing-xl);
	}

	.contact-page .content {
		max-width: none !important;
		width: 100% !important;
		margin: 0 auto;
	}

	.contact-form {
		padding: var(--spacing-xl);
		margin-bottom: var(--spacing-xl);
		max-width: 1680px;
		margin-left: auto;
		margin-right: auto;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.form-group {
		margin-bottom: var(--spacing-lg);
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
	}

	label {
		display: block;
		margin-bottom: var(--spacing-xs);
		font-size: 0.875rem;
		color: var(--color-accent);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 500;
		width: 100%;
	}

	input,
	textarea {
		width: 100%;
		padding: 0.875rem;
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(255, 255, 255, 0.1);
		color: var(--color-text);
		font-size: 1rem;
		font-family: inherit;
		transition: all 0.3s ease;
	}

	input:focus,
	textarea:focus {
		outline: none;
		border-color: var(--color-accent);
		background: rgba(255, 255, 255, 0.05);
	}

	textarea {
		resize: vertical;
		min-height: 150px;
	}

	.submit-btn {
		width: 100%;
		padding: 1rem 2rem;
		background: transparent;
		color: var(--color-accent);
		border: 1px solid var(--color-accent);
		font-size: 0.875rem;
		font-weight: 500;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.submit-btn:hover {
		background: var(--color-accent);
		color: var(--color-bg);
		transform: translateY(-2px);
	}

	.contact-info {
		text-align: center;
		padding-top: var(--spacing-lg);
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.email-direct {
		font-size: 1.125rem;
		margin-bottom: var(--spacing-md);
		color: var(--color-text-muted);
	}

	.email-direct a {
		color: var(--color-accent);
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	.email-direct a:hover {
		opacity: 0.8;
	}

	.location {
		font-size: 0.875rem;
		color: var(--color-text-muted);
		opacity: 0.6;
	}

	/* Fade in animations */
	.fade-in {
		opacity: 0;
		animation: fadeIn 0.8s ease-out forwards;
	}

	.fade-in-delay-1 {
		animation-delay: 0.2s;
	}

	.fade-in-delay-2 {
		animation-delay: 0.4s;
	}

	.fade-in-delay-3 {
		animation-delay: 0.6s;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Light theme - visible borders */
	:global([data-theme="light"]) input,
	:global([data-theme="light"]) textarea {
		background: rgba(0, 0, 0, 0.02);
		border: 1px solid rgba(0, 0, 0, 0.15);
	}

	:global([data-theme="light"]) input:focus,
	:global([data-theme="light"]) textarea:focus {
		background: rgba(0, 0, 0, 0.03);
	}

	/* Desktop - reduce form field width by half */
	@media (min-width: 1025px) {
		label,
		input,
		textarea {
			width: 50%;
		}

		.submit-btn {
			width: 50%;
		}
	}

	@media (max-width: 768px) {
		.contact-page {
			padding: 150px 5vw 80px;
		}

		.contact-page h1 {
			font-size: clamp(2rem, 8vw, 3rem);
		}

		.intro {
			font-size: 1rem;
			padding: 0 1rem;
		}

		.contact-form {
			padding: var(--spacing-md);
		}

		.submit-btn {
			padding: 0.875rem 1.5rem;
			font-size: 0.7rem;
		}

		input,
		textarea {
			font-size: 0.9rem;
		}
	}
</style>
